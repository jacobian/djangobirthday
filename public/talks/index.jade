extends ../base.jade

block pagetitle
  | Talks - Django Birthday

block content
  .container
    .row
      .col-sm-12
        h1 Talks
        p.lead Who's speaking at Django Birthday?

    for talk, slug in talks
      if talk.active
        .row(id=slug)
          .col-sm-12
            h2(id=talk.slug)
              | #{talk.title}
        .row
          .col-sm-3.hidden-xs
            if talk.speakers
              for speaker in talk.speakers
                img(src="#{speaker.image}", srcset="#{speaker.image_srcset}", width="100%", alt=speaker.name)
                h3
                  a.talk-speaker(href="../speakers/##{speaker.slug}")= speaker.name
          .col-sm-8
            p.lead!= talk.abstract
            if talk.video_url
              p.thesocial
                span.fa-stack.fa-2x(data-toggle="tooltip", data-placement="top", title=title)
                  a(href=talk.video_url)
                    i.fa.fa-square-o.fa-stack-2x
                    i(class="fa fa-video-camera fa-stack-1x")
